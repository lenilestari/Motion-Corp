<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical"
    tools:context=".Continue3">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:src="@drawable/gambar_3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Layanan Video On Demand"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="@string/Continue_3"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/bulatContinue_1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/white" />

            <View
                android:id="@+id/bulatContinue_2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/white" />

            <View
                android:id="@+id/bulatContinue_3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/circle" />

            <View
                android:id="@+id/bulatContinue_4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="113dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/T_Next3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selanjutnya"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/Image_3"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:src="@drawable/cont_1" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>